@model Travels.Models.Tours
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
<div>
    <h4>Tours</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TourName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TourName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tours_Excursions)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Excursion Name</th>
                </tr>
                @foreach (var item in Model.Tours_Excursions)
                {
                    <tr>
                        <td>
                            <i class="unhide icon"></i>
                            @Html.DisplayFor(modelItem => item.Excursion_Sights.ExcursionName)
                        </td>
                    </tr>
                }
                <tr>
                    <th>Client Name</th>
                </tr>
                @foreach (var item in Model.Tours_Clients)
                {
                    <tr>
                        <td>
                            <i class="user icon"></i>
                            @Html.DisplayFor(modelItem => item.Clients.ClientName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
